@{
    ViewData["Title"] = "Home Page";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="~/css/site.css" />
<div class="row carousel-holder">

    <div class="col-md-12">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>



            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img class="slide-image" src="~/images/img.jpg" alt="">
                </div>
                <div class="item">
                    <img class="slide-image" src="~/images/img2.jpg" alt="">
                </div>
                <div class="item">
                    <img class="slide-image" src="~/images/img3.png" alt="">
                </div>



            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<h2><span style="color:lightblue">Articles</span></h2>
<section id="gallery">
    <div class="container" id="panel1">
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <img src="~/images/wall.jpg" alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">The Great Wall</h5>
                        <p class="card-text">Wanna new adventure or to became a hero, then visit the Great Wall.</p>
                        <a href="https://www.chinahighlights.com/greatwall/how-to-visit.htm" class="btn btn-primary">Visit</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <img src="~/images/triangle.jpg" alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Golden Triangle</h5>
                        <p class="card-text">Do you know what is "Golden Triangle?</p>
                        <a href="https://www.chinahighlights.com/tour/cht-1/" class="btn btn-primary">Visit</a>
                        
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <img src="~/images/panda.jpg" alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">13-days with Pandas!</h5>
                        <p class="card-text">Pandas! Yes, you heard right! If you want adventure with this cuddly animals visit our article! :)</p>
                        <a href="https://www.chinahighlights.com/travelguide/guidebook/safety-security.htm" class="btn btn-primary">Visit</a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>








<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    $(function () {

        $('#panel1').hide(300).show(1000);

    });
</script>
